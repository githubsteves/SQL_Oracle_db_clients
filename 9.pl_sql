----- SHOW US THE AMOUNT OF FTD BONUSES

DECLARE 
   BONUS NUMBER;

BEGIN 
   SELECT SUM(FTD_BONUS)
   INTO BONUS 
   FROM BONUSES; 
   DBMS_OUTPUT.PUT_LINE (BONUS);
END;
/

