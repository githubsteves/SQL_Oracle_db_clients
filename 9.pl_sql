----- COUNT THE NUMBER OF THE CLIENTS  

set serveroutput on
;

DECLARE 
   CUSTOMERS_NUMBER NUMBER;
BEGIN
   SELECT COUNT(1)
   INTO CUSTOMERS_NUMBER
   FROM CUSTOMERS;
   DBMS_OUTPUT.PUT_LINE ( 'CUSTOMERS=' || CUSTOMERS_NUMBER);
END;
/

